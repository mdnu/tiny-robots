<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coffee_title_label"
        style="?android:listSeparatorTextViewStyle"/>
    <EditText
        android:id="@+id/coffee_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/coffee_title_hint"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/coffee_details_label"
        style="?android:listSeparatorTextViewStyle"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Button
            android:id="@+id/coffee_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_completed_label"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/coffee_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_completed_label"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/coffee_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_completed_label"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/coffee_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/coffee_with_text"/>
        <Button
            android:id="@+id/coffee_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/coffee_report_text"/>
        <Button
            android:id="@+id/call_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/call_friend"/>
    </LinearLayout>

</LinearLayout>